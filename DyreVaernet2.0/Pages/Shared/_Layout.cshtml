<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Roskilde Dyreinternat</title>

    <!-- Bootstrap og egne stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DyreVaernet2._0.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" />
</head>
<body>

    <!-- Header med navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-success px-3">
            <div class="container">

                <!-- Logo med link til forsiden -->
                <a class="navbar-brand" asp-page="/Index">
                    <img src="~/images/DVlog.png" alt="Logo" style="height: 40px;" />
                </a>

                <!-- Menupunkter -->
                <ul class="navbar-nav flex-grow-1">

                    <!-- Hjemmeside forside -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Index">Home</a>
                    </li>

                    <!-- Om os side -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/About">Om os</a>
                    </li>

                    <!-- Adopteringsside -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Adopt">Adopter</a>
                    </li>

                    <!-- Aktiviteter side -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Activity">Aktiviteter</a>
                    </li>

                    <!-- Bookingformular hvor brugeren kan booke besøg -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/BookVisit">Book et besøg</a>
                    </li>

                    <!-- Liste over bookinger (kan bruges af medarbejdere/admin) -->
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Bookings">Bookingoversigt</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>

    <!-- Hovedindholdet vises her -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer nederst på siden -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Roskilde Dyreværn - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
